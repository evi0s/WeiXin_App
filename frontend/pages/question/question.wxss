/**question.wxss**/
@import "../../wxSearchView/wxSearchView.wxss";

.container{
  height: 100rpx;
  display: flex;
}

/*nav*/
.nav{
 display:flex;
 flex-wrap:wrap;
 justify-content:center;
}
.nav-item{
  margin: 30rpx 50rpx 10rpx;
  width:80rpx;
}
.nav-item image{
  width:80rpx;
  height: 80rpx;
  border-radius:50%;
}
.nav-item text{
  width:80rpx;
  font-size: 25rpx;
  color:#000;
  display: inline-block;
  text-align: center;
}

/*articles*/
.articles-item-container {
  background-color: #fff;
  width: 100%;

}

.articles-item {
  display: flex;
  flex-direction: row;
  justify-content: space;
  padding-left: 10px;
  padding-top: 10px;
  padding-right: 10px;
  padding-bottom: 10px;
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 10px;
  background-color: #f5f5f9;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}
.articles-item-left{
  width: 80px;
  height: 80px;
}
.articles-item-right{
  width: 100%;
  height: 100%;
}
.articles-image{
  width: 20px;
  height: 100%;
  font-size: 4px;
}
.articles-item-title{
  margin-left:10px;
  font-size: 16px;
}
.articles-item-other-id{
  font-size: 8px;
}
.articles-item-other-left{
  font-size: 14px;
  color: #a8a8a8;
  float: left;
}
.articles-item-other-right{
  font-size: 14px;
  color: #a8a8a8;
  float: right;
}