<view class="user-head">
    <view class="center" bindtap = "userdata">
        <view class="user-img">
            <image src="{{userInfo.avatarUrl}}"/>
        </view>
        <view class="user-text">
            <text class="text">{{userInfo.nickName}}</text>
        </view>
    </view>
</view>

<view class="list">
    <view class="item" bindtap="change">
        <image src="../../images/change.png"/>修改信息
        <text class="jump">〉</text>
    </view>
    <view class="item" bindtap="settings">
        <image src="../../images/settings.png"/>设置
        <text class="jump">〉</text>
    </view>
    <view class="item" bindtap="logout">
        <image src="../../images/logout.png"/>注销
        <text class="jump">〉</text>
    </view>
</view>
