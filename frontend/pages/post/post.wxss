/* pages/post/post.wxss */
@import "../../wxSearchView/wxSearchView.wxss";


.list {
  background: #fff;
  margin-top:5rpx;
}
.list .item{
  padding:20px 15px;
  font-size: 14px;
  height:80rpx;
  width: 95%;
  color:#333;
  position: relative;
  border-bottom: 1px solid #f3f3f3;
}
.list .item::last-child{
  border:none;
}
.list .item image {
  width:18px;
  height: 18px;
  display: inline-block;
  vertical-align:middle;
  margin-right:8px;
}
.list .item .jump{
  position: absolute;
  right:20px;
  color:#999;
}

.list .item .left{
  font-size: 14px;
  color: #a8a8a8;
  float: left;
  margin-top:25rpx;
  padding-left: 10rpx;
}
.list .item .right{
  font-size: 14px;
  color: #a8a8a8;
  float: right;
  margin-top:25rpx;
}