/**index.wxss**/
@import "../../wxSearchView/wxSearchView.wxss";

.container{
  height: 100rpx;
  display: flex;
}

/*swiper*/

page {
  background-color: #fff;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.page-body{
  padding-top: 0rpx;
}
.page-section{
  width: 100%;
  margin-bottom: 10rpx;
}
.page-section-spacing{
  box-sizing: border-box;
  padding: 0 0rpx;
}
.swiper-item{
  display: block;
  height: 150px;
}

/*nav*/
.nav{
 display:flex;
 flex-wrap:wrap;
 justify-content:center;
}
.nav-item{
  margin: 30rpx 50rpx 10rpx;
  width:80rpx;
}
.nav-item image{
  width:80rpx;
  height: 80rpx;
  border-radius:50%;
}
.nav-item text{
  width:80rpx;
  font-size: 25rpx;
  color:#000;
  display: inline-block;
  text-align: center;
}

/*articles*/
.articles-item-container {
  background-color: #fff;
  width: 100%;

}

.articles-item {
  display: flex;
  flex-direction: row;
  justify-content: space;
  padding-left: 10px;
  padding-top: 10px;
  padding-right: 10px;
  padding-bottom: 10px;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
  background-color: #f5f5f9;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}
.articles-item-left{
  width: 80px;
  height: 80px;
}
.articles-item-right{
  width: 100%;
  height: 100%;
}
.articles-image{
  width: 80px;
  height: 80px;
  border-radius: 5px;
}
.articles-item-title{
  margin-left:10px;
  font-size: 16px;
}
.articles-item-other-left{
  font-size: 14px;
  color: #a8a8a8;
  float: left;
}
.articles-item-other-right{
  font-size: 14px;
  color: #a8a8a8;
  float: right;
}


.list {
  background: #fff;
  margin-top:0rpx;
  padding-top: 0px;
}
.list .item{
  display: flex;
  flex-direction: row;
  justify-content: space;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  font-size: 14px;
  height:160rpx;
  width: 92%;
  color:#333;
  position: relative;
  border-bottom: 1px solid #f3f3f3;
}
.list .item::last-child{
  border:none;
}
.list .item .imageleft {
  width:160rpx;
  height: 160rpx;
}
.list .item .imageleft image {
  width:115%;
  height: 100%;
  border-radius: 5px;
}
.list .item .itemright {
  width: 100%;
  height: 100%;
}
.list .item .jump{
  position: absolute;
  right:20rpx;
  color:#999;
}

.list .item .left{
  font-size: 14px;
  color: #a8a8a8;
  float: left;
  margin-top:80rpx;
  padding-left: 45rpx;
}
.list .item .right{
  font-size: 14px;
  color: #a8a8a8;
  float: right;
  margin-top:80rpx;
}